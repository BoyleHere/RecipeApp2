<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Ingredient Input -->
        <EditText
            android:id="@+id/ingredientInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Ingredient"
            android:inputType="text"
            android:padding="12dp"/>

        <Button
            android:id="@+id/searchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Recipes"
            android:layout_marginTop="8dp" />

        <!-- Recipe ID Input -->
        <EditText
            android:id="@+id/recipeIdInput"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Enter Recipe ID"
            android:inputType="number"
            android:padding="12dp"/>

        <Button
            android:id="@+id/detailsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Recipe Details"
            android:layout_marginTop="8dp" />

        <!-- Advanced Search Inputs -->
        <EditText
            android:id="@+id/cuisineInput"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Enter Cuisine (e.g., Italian)"
            android:inputType="text"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/dietInput"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Enter Diet (e.g., Vegetarian)"
            android:inputType="text"
            android:padding="12dp"/>

        <Button
            android:id="@+id/advancedSearchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Advanced Search"
            android:layout_marginTop="8dp" />

        <!-- Results Display -->
        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:paddingTop="12dp"
            android:textColor="@android:color/black" />

    </LinearLayout>
</ScrollView>
